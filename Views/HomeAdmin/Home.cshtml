
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/HomeLayout.cshtml";
}

<div class="card" style="width: 18rem;">
    <img class="card-img-top" src="~/images/homeledger.jpg" alt="Card image cap">
    <div class="card-body">
        <h5 class="card-title">Ledgers</h5>
        <p class="card-text">To View the Ledgers.</p>
        @using (Html.BeginForm("Ledgers", "Home"))
